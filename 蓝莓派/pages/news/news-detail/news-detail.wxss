/* pages/news/news-detail/news-detail.wxss */
.news-detail-container{
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
}
.topImage{
  width: 100%;
  height: 350rpx;
  margin-top: 0rpx;
}
.title{
  text-align: center;
  font-size: 40rpx;
  font-weight: 700;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.author-info{
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.author-icon{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.author-date {
  font-size: 24rpx;
  font-weight: 700;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 15rpx;
}
.author-name{
  font-size: 24rpx;
  font-weight: 700;
  margin-left: 15rpx;
}
.article-like{
  float: right;
}
.article-like-icon {
  height: 40rpx;
  width: 40rpx;
  margin-right: 50rpx;
  vertical-align: middle;
}
.text-image{
  margin: 40rpx ;
  width: 90%;
  height: 340rpx;

}
.article-text{
/* border:1px solid black; */
  color:#666;
  margin-top: 20rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 24rpx;
}